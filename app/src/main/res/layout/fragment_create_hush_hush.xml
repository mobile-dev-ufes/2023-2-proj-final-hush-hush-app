<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateHushHushFragment">

    <!--    title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gloriahallelujahregular"
        android:text="@string/new_hush_hush"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    first label-->
    <TextView
        android:id="@+id/textView_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="17sp"
        android:text="@string/title"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/create_edit_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:paddingStart="15dp"
        android:inputType="text"
        android:hint="@string/title"
        android:background="@drawable/border_hush_hush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_label_title"
        app:layout_constraintVertical_bias="0.5" />

    <!--    second label-->
    <TextView
        android:id="@+id/textView_label_hush_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="17sp"
        android:text="@string/hush_hush"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/create_edit_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/create_hush_hush_body"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_hush_hush"
        android:hint="@string/type_hush_hush"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/textView_label_hush_body" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/create"
        app:layout_constraintTop_toBottomOf="@id/create_hush_hush_body"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3" />


</androidx.constraintlayout.widget.ConstraintLayout>

